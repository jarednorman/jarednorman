{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": true,
  "wrap_guides": [80, 100],
  "edit_predictions": {
    "disabled_globs": [".env"]
  },
  "agent": {
    "enabled": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 12,
  "ui_font_family": ".SystemUIFont",
  "buffer_font_family": "MonoLisa",
  "buffer_font_size": 12,
  "buffer_font_features": {
    "calt": false,
    "liga": false
  },
  "theme": {
    "mode": "system",
    "light": "Ros√© Pine Dawn",
    "dark": "Gruvbox Dark Hard"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "soft_wrap": "editor_width",
  "use_autoclose": false,
  "languages": {
    "Ruby": {
      "tab_size": 2,
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop"],
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "CSS": {
      "tab_size": 2
    },
    "SCSS": {
      "tab_size": 2
    },
    "ERB": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "C": {
      "language_servers": ["!clangd"]
    },
    "C++": {
      "language_servers": ["!clangd"]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true,
          "onTypeFormatting": false
        },
        "formatter": "standard"
      }
    },
    "rescript-language-server": {
      "initialization_options": {
        "extensionConfiguration": {
          "askToStartBuild": false
        }
      }
    }
  }
}
