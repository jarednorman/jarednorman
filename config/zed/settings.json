{
  "wrap_guides": [80, 100],
  "inline_completions": {
    "disabled_globs": [".env", "**/*.res"]
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    }
  },
  "show_inline_completions": true,
  "telemetry": {
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  },
  "ui_font_family": "JetBrains Mono NL",
  "ui_font_size": 13,
  "buffer_font_family": "JetBrains Mono NL",
  "buffer_font_size": 13,
  "buffer_font_features": {
    "calt": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "soft_wrap": "editor_width",
  "use_autoclose": false,
  "languages": {
    "ReScript": {
      "show_inline_completions": false
    },
    "Ruby": {
      "tab_size": 2,
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop"],
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "CSS": {
      "tab_size": 2
    },
    "SCSS": {
      "tab_size": 2
    },
    "ERB": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "formatter": "standard"
      }
    }
  }
}
